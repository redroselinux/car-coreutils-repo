version = "2.2.6"
description = "Nim programming language compiler and tools"
delete_files = ["/usr/bin/nim", "/usr/bin/nimble"]

import os

def beforeinst():
  print("Nim is licensed under the MIT License")

def install():
  print("Downloading Nim from https://nim-lang.org/download/nim-2.2.6-linux_x64.tar.xz")
  os.system("curl -s -L -o nim.tar.xz https://nim-lang.org/download/nim-2.2.6-linux_x64.tar.xz")
  os.system("tar -xf nim.tar.xz")
  os.chdir(f"nim-{version}")
  os.chdir("bin")
  for i in os.listdir():
    os.system(f"mv {i} /usr/bin/{i}")

def postinst():
  print("Optional packages:")
  print("    nim-doc - manpages for nim")
