def beforeinst():
    print("shadow is licensed under the GNU General Public License version 3 or later")

def build():
   print("Downloading shadow from https://github.com/redroselinux/car-coreutils-repo/raw/refs/heads/main/shadow-bin.tar.xz")
   os.system("curl -s -L -o shadow.tar.gz https://github.com/redroselinux/car-coreutils-repo/raw/refs/heads/main/shadow-bin.tar.xz")

def install():
   print("Installing shadow")
   os.system("tar -xJf shadow.tar.gz -C /usr/bin")
