import os

def beforeinst():
    print(":: make is licensed under GPL-3.0-or-later")

def install():
    print(":: Downloading make from https://github.com/redroselinux/car-coreutils-repo/raw/refs/heads/main/make-bin")
    os.system("curl -s -L -o /usr/bin/make https://github.com/redroselinux/car-coreutils-repo/raw/refs/heads/main/make-bin")
    os.system("chmod +x /usr/bin/make")
